    package="com.example.vinit.assignment7_menu_program">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login_Layout"
            android:label="@string/title_activity_login__layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registration_Layout"
            android:label="@string/title_activity_registration__layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".After_Login"
            android:label="@string/title_activity_after__login"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
